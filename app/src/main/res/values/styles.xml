<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaiboButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">0dp</item>
<!--        <item name="android:paddingHorizontal">20dp</item>-->
<!--        <item name="android:paddingVertical">12dp</item>-->
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MaiboButtonPurple" parent="@style/MaiboButton">
        <item name="android:backgroundTint">@color/maibo_light_purple</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="RoundedCornersDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="dialogCornerRadius">8dp</item>
    </style>

</resources>